<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="CirrusWhiteStyle">
        <!--<item name="contentInsetStart">0dp</item>-->
        <!--<item name="contentInsetStartWithNavigation">0dp</item>-->
        <item name="popupTheme">@style/CirrusWhiteStyle.PopupTheme</item>
        <item name="subtitleTextAppearance">@style/AtomCoreStyle.WhiteSmallText</item>
        <item name="titleTextAppearance">@style/AtomCoreStyle.WhiteHugeText</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="toolbarNavigationButtonStyle">@style/CirrusNavigationButtonStyle</item>
        <item name="android:actionButtonStyle">@style/CirrusActionButtonStyle</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>

    </style>

    <!-- popupTheme -->
    <style name="CirrusWhiteStyle.PopupTheme" parent="AtomCoreStyle.WhiteNormalText">
        <item name="actionOverflowMenuStyle">@style/CirrusWhiteStyle.ActionMenuOverflowStyle</item>
    </style>

    <!-- Overflow Menu Style -->
    <style name="CirrusWhiteStyle.ActionMenuOverflowStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownHorizontalOffset">-2dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>

    <!-- toolbarNavigationButtonStyle -->
    <style name="CirrusNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">@dimen/atom_core_resDimensGapBig</item>
        <item name="android:paddingRight">0dp</item>
        <!--<item name="android:paddingRight">@dimen/atom_core_resDimensGapBig</item>-->
    </style>

    <!-- android:actionButtonStyle -->
    <style name="CirrusActionButtonStyle" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">@dimen/atom_core_resDimensGapSmall</item>
        <item name="android:paddingRight">@dimen/atom_core_resDimensGapSmall</item>
        <item name="android:paddingStart">@dimen/atom_core_resDimensGapSmall</item>
        <item name="android:paddingEnd">@dimen/atom_core_resDimensGapSmall</item>
    </style>

    <style name="CirrusActionOverflowButtonStyle" parent="Widget.AppCompat.Light.ActionButton.Overflow">

    </style>
</resources>